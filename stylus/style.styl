font-family-section-name= 'Open Sans', sans-serif
font-family-header= 'Bitter', serif
color-light-grey= #b8babd
color-medium-grey= #64666f
color-dark-grey= #292a2f
color-c5-orange= #f15d2a

p, ol, ul, li
  margin 0
  padding 0

.centered
  margin 0 auto
  max-width 1400px
  min-width 960px
  width 80%

.section-name
  font-family font-family-section-name
  font-size 12px
  text-transform uppercase

h1 h2 h3 h4
  font-family font-family-header

h1
  font-size 36px
h2
  font-size 32px
  font-weight normal
h3
  font-size 24px
h4
  font-size 14px

nav ol li, nav ul li
  input[type=submit]
    background-color color-medium-grey
    border 2px solid white
    color: #fff
    -o-border-radius: 50%
    -ms-border-radius: 50%
    -moz-border-radius: 50%
    -webkit-border-radius: 50%
    border-radius: 50%
    font-weight bold
    &:hover
      color color-c5-orange
      background-color white
      border-color color-c5-orange
    &.active
      background-color color-c5-orange

  input.show-lesson
    font-size: 16px
    height: 40px
    line-height: 40px
    margin-right: 4px
    min-width: 40px
    padding: 0 4px
  input.show-exercise
    font-size: 12px
    height: 28px
    line-height: 28px
    margin-right: 4px
    min-width: 28px
    padding: 0 2px

nav.lesson
  margin-top 8px
  ol
    margin-top 4px
    li
      display inline-block

nav.exercise
  padding 16px 0
  ul
    margin-left 8px
    list-style none
  li
    min-height: 28px
    margin 4px 0


body
  background-image url('/images/background-mac.jpg')
  border 0
  margin 0
  padding 50px
  header
    text-align center
    p.section-name
      color white
    h1
      color white
      margin 4px 0 80px 0
  .course
    background-color color-dark-grey
    lesson-nav-offset = 46px
    margin-top (1.5 * lesson-nav-offset)
    position relative
    padding-bottom 30px
    .header
      color white
      padding-top lesson-nav-offset
      text-align center
      a.by-carbon-five
        text-indent 200%
        position absolute
        display inline-block
        background-image url('/images/c5-logo.png')
        logo-size = 60px
        width logo-size
        height logo-size
        top -(logo-size / 2)
        right -(logo-size / 2)
      nav.lesson
        position absolute
        top - (lesson-nav-offset)
        width 100%          
      h2
        margin 0 0 20px 0
        color white
    .exercise-container
      exercise-spacing = 24px
      background-color white
      position relative
      overflow hidden
      .header
        exercise-header-height = 60px
        color color-dark-grey
        padding exercise-spacing 0
        h3
          margin 0
          color color-dark-grey
          line-height exercise-header-height
        a.next
          position absolute        
          text-indent 200%
          display inline-block
          background-image url('/images/button-arrows-next.png')
          width 90px
          height exercise-header-height
          right exercise-spacing
          top exercise-spacing
          &:hover
            background-position 0 -60px
      .exercise
        width 60%
        float left
        margin-left exercise-spacing
        padding-bottom exercise-spacing
      nav.exercise
        background-color color-light-grey
        float right
        margin-right exercise-spacing
        padding-bottom exercise-spacing
        width 30%
        p.section-name
          text-align center